{
  "version": 2,
  "buildCommand": "echo 'Static site build'",
  "outputDirectory": ".",
  "functions": {
    "api/create-pix.js": {
      "maxDuration": 30
    },
    "api/payment-status.js": {
      "maxDuration": 30
    },
    "api/simulate-payment.js": {
      "maxDuration": 30
    },
    "api/create-user.js": {
      "maxDuration": 30
    }
  },
  "headers": [
    {
      "source": "/assets/translations/(.*)",
      "headers": [
        {
          "key": "Content-Type",
          "value": "application/json"
        },
        {
          "key": "Cache-Control",
          "value": "public, max-age=3600"
        }
      ]
    }
  ]
} 