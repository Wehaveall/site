{
  "buildCommand": "npm run build",
  "outputDirectory": ".",
  "installCommand": "npm install",
  "functions": {
    "api/create-pix.js": {
      "maxDuration": 30
    },
    "api/payment-status.js": {
      "maxDuration": 30
    },
    "api/simulate-payment.js": {
      "maxDuration": 30
    }
  },
  "redirects": [
    {
      "source": "/(.*)",
      "has": [
        {
          "type": "header",
          "key": "x-forwarded-proto",
          "value": "http"
        }
      ],
      "destination": "https://www.atalho.me/$1",
      "permanent": true
    },
    {
      "source": "/(.*)",
      "has": [
        {
          "type": "host",
          "value": "atalho.me"
        }
      ],
      "destination": "https://www.atalho.me/$1",
      "permanent": true
    }
  ]
} 